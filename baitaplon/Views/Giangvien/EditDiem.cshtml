@model baitaplon.Models.diemthi

@{
    ViewBag.Title = "EditDiem";
    Layout = "~/Views/Shared/_Layoutgv.cshtml";
}

<style>
    body {
        color: #111111;
    }
    table, td, th {
        border: 1px solid;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }
</style>
<h2>Sửa điểm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Điểm thi </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSV)

        @Html.HiddenFor(model => model.MaMH)

        <div class="form-group">
            <label>Số điểm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiemThi1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiemThi1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
