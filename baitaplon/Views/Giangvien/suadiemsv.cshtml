@model IEnumerable<baitaplon.Models.sinhvien>

@{
    ViewBag.Title = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_Layoutgv.cshtml";
}

<h2>Danh sách sinh viên</h2>

<table style="width:100%">
    <tr>
        <th>Mã sinh viên</th>
        <th>Tên sinh viên</th>
        <th>Mã lớp</th>
        <th>Tên lớp</th>
        <th>Hành động</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSV</td>
            <td>@item.TenSV</td>
            <td>@item.MaLop</td>
            <td>@item.lop.TenLop</td>
            <td>
                <a href="@Url.Action("listDiem", new { MaSV = item.MaSV })">Xem điểm</a>
            </td>
        </tr>
    }
</table>
